                        </div>

                        <div class="mb-4">
                            <label class="form-label fw-semibold">
                                <i class="bi bi-credit-card me-1"></i>Payment Method
                            </label>
                            <select asp-for="CreateOrderDto.PaymentMethod" class="form-select form-select-lg" required>
                                <option value="">-- Select payment method --</option>
                                <option value="Stripe">
                                    <i class="bi bi-credit-card"></i> Stripe (Credit/Debit Card)
                                </option>
                                <option value="Fawry">
                                    <i class="bi bi-wallet2"></i> Fawry
                                </option>
                            </select>
                            <span class="text-danger small" asp-validation-for="CreateOrderDto.PaymentMethod"></span>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                            <a asp-controller="Cart" asp-action="Index" class="btn btn-outline-secondary px-4">
                                <i class="bi bi-arrow-left me-1"></i>Back to Cart
                            </a>
                            <button type="submit" class="btn btn-success btn-lg px-5">
                                <i class="bi bi-check-circle me-1"></i>Confirm & Pay
                            </button>
                        </div>
                    </form>

                    <!-- ✅ Separate Delete Form -->
                    <form id="deleteAddressForm" asp-controller="Address" asp-action="DeleteAddress" method="post" style="display:none;">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="id" id="selectedAddressId" />
