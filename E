@model CheckoutViewModel
@{
    ViewData["Title"] = "Checkout";
}

<div class="container mt-5 mb-5">
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show shadow-sm" role="alert">
            <i class="bi bi-exclamation-triangle-fill me-2"></i>@TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show shadow-sm" role="alert">
            <i class="bi bi-check-circle-fill me-2"></i>@TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="mb-4">
        <h2 class="fw-bold">
            <i class="bi bi-cart-check me-2"></i>Checkout
        </h2>
        <p class="text-muted">Complete your order by providing shipping and payment details</p>
    </div>

    <div class="row g-4">
        <div class="col-lg-8">
            <!-- Shipping Address Card -->
            <div class="card shadow-lg border-0 rounded-3 mb-4">
                <div class="card-header bg-primary text-white py-3">
                    <h5 class="mb-0">
                        <i class="bi bi-geo-alt-fill me-2"></i>Shipping Address
                    </h5>
                </div>
                <div class="card-body p-4">
                    <!-- ✅ Main Checkout Form -->
                    <form asp-action="Process" method="post" id="checkoutForm">
                        <input type="hidden" asp-for="CreateOrderDto.UserId" />

                        <div class="mb-4">
                            @if (Model.Addresses != null && Model.Addresses.Any())
                            {
                                <label class="form-label fw-semibold mb-3">
                                    <i class="bi bi-house-door me-1"></i>Select Shipping Address
                                </label>
                                <select asp-for="CreateOrderDto.AddressId" class="form-select form-select-lg mb-3" required>
                                    <option value="">-- Choose an address --</option>
                                    @foreach (var a in Model.Addresses)
                                    {
                                        <option value="@a.Id">
                                            @a.Street, @a.City (@a.PostalCode) - @a.Country
                                        </option>
                                    }
                                </select>

                                <div class="d-flex flex-wrap gap-2">
                                    <a asp-controller="Address" asp-action="AddAddress" class="btn btn-success">
                                        <i class="bi bi-plus-circle me-1"></i> Add New Address
                                    </a>

                                    <a id="editAddressBtn" class="btn btn-warning text-white">
                                        <i class="bi bi-pencil-square me-1"></i> Edit Selected
                                    </a>

                                    <button type="button" id="deleteAddressBtn" class="btn btn-danger">
                                        <i class="bi bi-trash me-1"></i> Delete Selected
                                    </button>
                                </div>
                            }
                            else
                            {
                                <div class="alert alert-info border-0 shadow-sm">
                                    <i class="bi bi-info-circle me-2"></i>
                                    <strong>No addresses found.</strong> Please add a shipping address to continue.
