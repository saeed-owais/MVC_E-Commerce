@model E_Commerce_MVC.Models.Product.ProductListViewModel

@{
    ViewData["Title"] = "Products";
}

<div class="container mt-5 mb-5">
    <!-- Page Header -->
    <div class="mb-4">
        <h2 class="fw-bold">
            <i class="bi bi-grid-3x3-gap-fill me-2"></i>Our Products
        </h2>
        <p class="text-muted">Discover our wide range of quality products</p>
    </div>

    <!-- Filter Section -->
    <div class="card shadow-lg border-0 rounded-3 mb-4">
        <div class="card-header bg-primary text-white py-3">
            <h5 class="mb-0">
                <i class="bi bi-funnel-fill me-2"></i>Filter Products
            </h5>
        </div>
        <div class="card-body p-4">
            <form method="get" class="row g-3 align-items-end">
                <div class="col-md-6">
                    <label class="form-label fw-semibold">
                        <i class="bi bi-bookmark-fill me-1"></i>Category
                    </label>
                    <select name="categoryId"
                            onchange="this.form.submit()"
                            class="form-select form-select-lg">
                        <option value="">
                            <i class="bi bi-list-ul"></i> All Categories
                        </option>
                        @foreach (var c in Model.Categories)
                        {
                            var isSelected = Model.SelectedCategoryId == c.Id ? "selected" : "";
                            @Html.Raw($"<option value='{c.Id}' {isSelected}>{c.Name}</option>")
                        }
                    </select>
                </div>
                <div class="col-md-6">
                    <div class="d-flex gap-2">
                        @* <button type="submit" class="btn btn-primary btn-lg">
                            <i class="bi bi-search me-1"></i>Apply Filter
                        </button> *@
                        @if (!string.IsNullOrEmpty(Model.SelectedCategoryId))
                        {
                            <a href="@Url.Action("Index")" class="btn btn-outline-secondary btn-lg">
                                <i class="bi bi-x-circle me-1"></i>Clear Filter
                            </a>
                        }
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- Products Count -->
    @if (Model.Products != null && Model.Products.Any())
    {
        <div class="mb-3">
            <p class="text-muted">
                <i class="bi bi-box-seam me-1"></i>
                Showing <strong>@Model.Products.Count()</strong> product(s)
            </p>
        </div>
    }

    <!-- Products Grid -->
    @if (Model.Products != null && Model.Products.Any())
    {
        <div class="row g-4">
            @foreach (var p in Model.Products)
            {
                <div class="col-xl-3 col-lg-4 col-md-6">
                    <div class="card h-100 shadow-sm border-0 rounded-3 product-card">
                        <!-- Product Image -->
                        <div class="position-relative overflow-hidden" style="height: 250px;">
                            <img src="@p.ImageUrl"
                                 class="card-img-top w-100 h-100"
                                 alt="@p.Name"
                                 style="object-fit: cover; transition: transform 0.3s ease;"
                                 onmouseover="this.style.transform='scale(1.1)'"
                                 onmouseout="this.style.transform='scale(1)'" />
                            <div class="position-absolute top-0 end-0 m-2">
                                <span class="badge bg-success px-3 py-2">
                                    <i class="bi bi-tag-fill me-1"></i>@p.Price.ToString("C")
                                </span>
                            </div>
                        </div>

                        <!-- Product Body -->
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title fw-bold mb-2">@p.Name</h5>
                            <p class="text-success fw-bold fs-5 mb-3">@p.Price.ToString("C")</p>

                            <!-- Buttons -->
                            <div class="mt-auto d-grid gap-2">
                                <a asp-action="Details"
                                   asp-route-id="@p.Id"
                                   class="btn btn-primary">
                                    <i class="bi bi-eye-fill me-1"></i>View Details
                                </a>

                                <form asp-controller="Cart"
                                      asp-action="AddToCart"
                                      method="post">
                                    <input type="hidden" name="productId" value="@p.Id" />
                                    <input type="hidden" name="qty" value="1" />
                                    <button type="submit" class="btn btn-success w-100">
                                        <i class="bi bi-cart-plus me-1"></i>Add to Cart
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <!-- Empty State -->
        <div class="card shadow-lg border-0 rounded-3">
            <div class="card-body text-center py-5">
                <div class="mb-3">
                    <i class="bi bi-inbox text-muted" style="font-size: 4rem;"></i>
                </div>
                <h4 class="text-muted mb-2">No Products Found</h4>
                <p class="text-muted mb-3">
                    @if (!string.IsNullOrEmpty(Model.SelectedCategoryId))
                    {
                        <span>No products available in this category.</span>
                    }
                    else
                    {
                        <span>There are no products available at the moment.</span>
                    }
                </p>
                @if (!string.IsNullOrEmpty(Model.SelectedCategoryId))
                {
                    <a href="@Url.Action("Index")" class="btn btn-primary">
                        <i class="bi bi-arrow-left-circle me-1"></i>View All Products
                    </a>
                }
            </div>
        </div>
    }

    <!-- Back to Home -->
    <div class="mt-4">
        <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-house-door me-1"></i>Back to Home
        </a>
    </div>
</div>

<style>
    .product-card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .product-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.15) !important;
        }
</style>