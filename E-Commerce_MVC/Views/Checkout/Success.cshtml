@{
    ViewData["Title"] = "Order Success";
}
<div class="container mt-5 text-center">
    <div class="mb-3">
        <h2 class="text-success">✅ Thank you! Your order is confirmed.</h2>
        <p class="text-muted">Order ID: <strong>@ViewBag.OrderId</strong></p>
    </div>
    <a class="btn btn-outline-primary" asp-controller="Orders" asp-action="Details" asp-route-id="@ViewBag.OrderId">View Order Details</a>
    <a class="btn btn-primary ms-2" asp-controller="Home" asp-action="Index">Continue Shopping</a>
</div>
