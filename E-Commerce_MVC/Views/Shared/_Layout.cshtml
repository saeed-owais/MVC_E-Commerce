@using Microsoft.AspNetCore.Identity
@inject SignInManager<DA.Models.ApplicationUser> SignInManager
@inject UserManager<DA.Models.ApplicationUser> UserManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - .NET Ninjas</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" />
    <style>
        /* Colors and theme */
        body {
            background-color: #f8f9fa; /* light grey background */
            color: #343a40; /* dark grey text */
        }

        .navbar {
            background-color: #ffffff; /* white navbar */
        }

        .navbar-brand {
            font-weight: bold;
            color: #007bff; /* soft blue */
        }

        .navbar-nav .nav-link {
            color: #343a40;
            transition: color 0.3s;
        }

            .navbar-nav .nav-link:hover {
                color: #007bff;
            }

        footer {
            background-color: #ffffff;
            padding: 20px 0;
            border-top: 1px solid #dee2e6;
            margin-top: 50px;
        }

        .fade-in {
            animation: fadeIn 0.8s ease-in;
        }

    

        
        

        .card {
            border-radius: 10px;
            transition: transform 0.3s, box-shadow 0.3s;
        }

            .card:hover {
                transform: translateY(-5px);
                box-shadow: 0 8px 20px rgba(0,0,0,0.1);
            }
    </style>
    @RenderSection("Styles", required: false)
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-light shadow-sm mb-4">
        <div class="container">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">E-Commerce</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                    aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Products" asp-action="Index">Products</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Cart" asp-action="Index">Cart</a>
                    </li>
                    @if (SignInManager.IsSignedIn(User))
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Account" asp-action="SignOut">Logout</a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Account" asp-action="Register">Register</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Account" asp-action="Login">Login</a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <!-- Main content -->
    <div class="container fade-in">
        @RenderBody()
    </div>

    <!-- Footer -->
    <footer class="text-center text-muted">
        <div class="container">
            <p>&copy; @DateTime.Now.Year E-Commerce. All rights reserved.</p>
            <small class="d-block">Designed for clean and simple online shopping experience.</small>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
