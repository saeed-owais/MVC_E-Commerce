
@model IEnumerable<BLL.DTOs.OrderDTOs.OrderHistoryDto>

    <style>
        body {
            background-color: #f8f9fa;
            font-family: 'Segoe UI', sans-serif;
        }

        .table thead th {
            background-color: #e9ecef;
            font-weight: 600;
        }

        .badge-status {
            font-size: 0.85rem;
            padding: 0.4em 0.7em;
        }

        .status-pending {
            background-color: #ffc107;
            color: #212529;
        }

        .status-shipped {
            background-color: #0dcaf0;
            color: #212529;
        }

        .status-delivered {
            background-color: #28a745;
        }

        .status-cancelled {
            background-color: #dc3545;
        }

        .btn-primary {
            border-radius: 20px;
        }

        .card {
            border-radius: 1rem;
            border: none;
            box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
        }
    </style>
@* </head> *@
<body>

    <div class="container mt-5 mb-5">
        <div class="text-center mb-4">
            <h2 class="fw-bold text-primary"><i class="bi bi-bag-check-fill me-2"></i>My Orders</h2>
            <p class="text-muted">Here’s a summary of all your previous purchases</p>
        </div>

        <div class="card p-4 shadow-sm">
            <table class="table table-hover align-middle mb-0">
                <thead>
                    <tr>
                        <th>Date</th>
                        <th>Status</th>
                        <th class="text-end">Total</th>
                        <th class="text-center">Action</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (var order in Model)
                        {
                            <tr>
                                <td>@order.OrderDate.ToShortDateString()</td>
                                <td>
                                    <span class="badge badge-status
                                                @(order.Status == "Pending" ? "status-pending" :
                                                  order.Status == "Shipped" ? "status-shipped" :
                                                  order.Status == "Delivered" ? "status-delivered" :
                                                  "status-cancelled")">
                                @order.Status
                            </span>
                        </td>
                        <td class="text-end text-success fw-semibold">@order.TotalAmount</td>
                        <td class="text-center">
                            <a asp-action="Details" asp-route-id="@order.Id" class="btn btn-primary btn-sm">
                                <i class="bi bi-eye-fill me-1"></i> View
                            </a>
                        </td>
                    </tr>
                                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="4" class="text-center text-muted py-4">
                                <i class="bi bi-clipboard-x fs-4 d-block mb-2"></i>
                                You have no orders yet.
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>


</body>

